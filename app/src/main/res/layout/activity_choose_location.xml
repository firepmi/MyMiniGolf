<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_main"
        android:scaleType="centerCrop"/>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="35dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/button_back" />
    <ImageButton
        android:id="@+id/btn_find_location"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:src="@drawable/button_find_my_closest_locations"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />
    <ImageView
        android:id="@+id/bg_enter_your_zip_code"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:src="@drawable/bg_enter_your_zip_code"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_find_location"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/txt_zip"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/bg_enter_your_zip_code"
        android:layout_alignLeft="@+id/bg_enter_your_zip_code"
        android:layout_alignBottom="@+id/bg_enter_your_zip_code"
        android:layout_toLeftOf="@+id/btn_go"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:inputType="textFilter"
        android:lines="1"
        />
    <ImageButton
        android:id="@+id/btn_go"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/button_enter_zip_code_go"
        android:background="@color/transparent"
        android:scaleType="centerInside"
        android:layout_alignTop="@+id/bg_enter_your_zip_code"
        android:layout_alignBottom="@+id/bg_enter_your_zip_code"
        android:layout_alignRight="@+id/bg_enter_your_zip_code"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="5dp"
        />
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bg_enter_your_zip_code"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_round"
        tools:listitem="@layout/location_list_item"
        android:minHeight="70dp"
        >
    </ListView>

</RelativeLayout>